<UserControl x:Class="WPFTest.GameTimer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFTest"
             mc:Ignorable="d" Width="335.165" Height="299.565" Loaded="UserControl_Loaded">
    <Grid Background="WhiteSmoke">
        <Label x:Name="speedLbl" Content="Speed" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="61" Width="315" FontSize="20"/>
        <Label x:Name="accuracyLbl" Content="Accuracy" HorizontalAlignment="Left" Margin="10,76,0,0" VerticalAlignment="Top" Height="49" Width="315" FontSize="20"/>
        <Button x:Name="startBtn" Content="Start" HorizontalAlignment="Left" Margin="10,210,0,0" VerticalAlignment="Top" Width="143" Height="79" Click="startBtn_Click"/>
        <Button x:Name="stopBtn" Content="Stop" HorizontalAlignment="Left" Margin="175,210,0,0" VerticalAlignment="Top" Width="150" Height="79" Click="stopBtn_Click"/>
        <Label x:Name="curTimeLbl" Content="Current time" HorizontalAlignment="Left" Margin="10,125,0,0" VerticalAlignment="Top" Height="49" Width="315" FontSize="20" Visibility="Hidden"/>

    </Grid>
</UserControl>
